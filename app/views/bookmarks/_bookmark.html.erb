<% if (defined? carousel).nil? == false && carousel %>
  <%= render partial: '/bookmarks/bookmark_carousel',
             locals: { topic: topic, bookmark: bookmark,
                       num_items:    num_items,
                       item_num:     item_num,
                       no_likes:     (defined? no_likes).nil?       ? false : no_likes,
                       no_delete:    (defined? no_delete).nil?      ? false : no_delete,
                       no_edit:      (defined? no_edit).nil?        ? false : no_edit,
                       debug_footer: (defined? debug_footer).nil?  ? false : debug_footer
                     }
  %>
<% elsif (defined? embedly).nil? == false && embedly %>
  <%= render partial: '/bookmarks/bookmark_embedly',
             locals: { topic: topic, bookmark: bookmark,
                       item_num:     item_num,
                       column:       bookmark_column,
                       no_likes:     (defined? no_likes).nil?       ? false : no_likes,
                       no_delete:    (defined? no_delete).nil?      ? false : no_delete,
                       no_edit:      (defined? no_edit).nil?        ? false : no_edit,
                       debug_footer: (defined? debug_footer).nil?  ? false : debug_footer
                     }
  %>
<% else %>
  <%= render partial: '/bookmarks/bookmark_columns',
           locals: { topic: topic, bookmark: bookmark,
                     no_likes:     (defined? no_likes).nil?      ? false : no_likes,
                     no_delete:    (defined? no_delete).nil?     ? false : no_delete,
                     no_edit:      (defined? no_edit).nil?       ? false : no_edit,
                     debug_footer: (defined? debug_footer).nil?  ? false : debug_footer
                   }
%>
<% end %>
