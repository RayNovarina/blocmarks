<% props = properties(topics: [@topic], num_topics: 1, topic: @topic, topics_index: 0) %>

<header style="margin-bottom:30px;">
  <div class="row">
    <%= render partial: 'show_page_header',locals: { props: props }
    %>
  </div>
</header>

<main>
  <div class="row">
    <div class="col-md-12">
      <% props[:topic].bookmarks.each_with_index do |bookmark, index| %>
        <%= render partial: '/bookmarks/bookmark',
                   locals: { props: props.merge!(
                             num_bookmarks: props[:topic].bookmarks.length,
                             bookmark: bookmark, bookmarks_index: index) } %>
      <% end %>
    </div>
  </div>
</main>
