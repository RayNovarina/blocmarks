<div class="css-topic" style="margin-bottom:20px;">
  <header style="margin-bottom:4px;">
    <div class="row">
      <div class="col-md-12">
        <h4 class="media-heading css-topic-title">
          <span style="text-decoration: underline; font-size: 24px;">
            <%= link_to "##{props[:topic].title}", props[:topic], title: "Created by: #{props[:topic].user.name}" %>
          </span>
          <span class="css-topic-title-actions" style="margin-left: 10px;">
            <% if rpt_topic(props)[:include_edit] %>
              <span><%= link_to 'Edit', '', class: 'btn btn-xs btn-success' %></span>
            <% end %>
            <% if rpt_topic(props)[:include_delete] %>
              <span><%= link_to 'Delete', '', class: 'btn btn-xs btn-danger' %></span>
            <% end %>
          </span>
        </h4>
      </div>
    </div>
  </header>

  <main>
    <div class="row">
      <div class="col-md-12">
        <% props[:bookmarks].each_with_index do |bookmark, index| %>
          <%= render partial: '/bookmarks/bookmark',
                     locals: { props: properties(
                                        { topic: props[:topic],
                                          num_items: props[:bookmarks].length,
                                          bookmark: bookmark,
                                          item_num: index
                                        },
                                        props[:rpt_tag]
                                      )
                             } %>
          <% #empty_bookmark_columns = num_bookmarks  % bookmarks_per_row %>
        <% end %>
      </div>
    </div>
  </main>
</div>
