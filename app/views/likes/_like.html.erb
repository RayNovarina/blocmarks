<div class="css-like-link"
     style="width: 48px; display: inline-block;">
  <% if like = current_user.liked?(properties[:bookmark]) %>
    <%= link_to [properties[:bookmark], like], class: 'btn btn-danger', method: :delete do %>
      <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
    <% end %>
  <% else %>
    <%= link_to [properties[:bookmark], Like.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
    <% end %>
  <% end %>
</div>
