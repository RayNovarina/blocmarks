<header>
  <div class="row">
    <%= render partial: 'show_page_header', locals: { topic: @topic } %>
  </div>
</header>

<main>
  <div class="row">
    <div class="col-md-12">
      <% @topic.bookmarks.each do |bookmark| %>
        <%= render partial: '/topics/bookmark', locals: { bookmark: bookmark } %>
      <% end %>
    </div>
  </div>
</main>
