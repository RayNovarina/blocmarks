<div class="css-new_edit_form">
  <%= form_for [props[:topic], props[:bookmark]]  do |f| %>

    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Enter bookmark title' %>

    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 2, class: 'form-control', placeholder: 'Enter bookmark description' %>

    <%= f.label 'Url from browser address bar' %><br />
    <%= f.text_field :url, class: 'form-control', placeholder: 'Enter bookmark url or address' %>

    <div class="css-actions">
      <%= f.submit(props[:bookmark].new_record? ? 'Create Bookmark' : 'Update Bookmark', class: 'btn btn-primary') %>
    </div>
  <% end %>
</div>
