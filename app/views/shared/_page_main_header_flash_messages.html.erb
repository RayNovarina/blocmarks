<!-- Global flash messages -->
<div class="row">
  <div class="col-md-6">
    <% flash.each do |message_type, message| %>
      <div class="alert
          <%= flash.now ? 'alert-danger' : flash[:notice] ? 'alert-success' : 'alert-info'%>
      ">
        <%= message %>
        <a class="close" data-dismiss="alert">&#215;</a>
      </div>
    <% end %>
  </div>
</div>
