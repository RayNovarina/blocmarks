<div class="css-new_edit_form">
  <%= form_for topic  do |f| %>

    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Enter topic title' %>

    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 2, class: 'form-control', placeholder: 'Enter topic description' %>

    <div class="css-actions">
      <%= f.submit(topic.new_record? ? 'Create Topic' : 'Edit Topic', class: 'btn btn-primary') %>
    </div>
  <% end %>
</div>
