<div class="css-card-footer" style="padding-left: 12px;">
  <% if policy(Like).create? && rpt_bmk(props)[:include_likes] %>
    <%= render partial: 'likes/like', locals: { props: props.merge(btn_classes: 'btn btn-xs btn-primary') } %>
  <% end %>
  <% if policy(props[:bookmark]).destroy? && rpt_bmk(props)[:include_delete] %>
    <span class="css-bookmark-action" style="margin-left: 8px; padding-top: 4px; padding-right: 4px;">
      <%= link_to 'Remove', [props[:topic], props[:bookmark]], method: :delete,
                  class: 'btn btn-xs btn-danger',
                  data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
    </span>
  <% end %>
  <% if policy(props[:bookmark]).edit? && rpt_bmk(props)[:include_edit] %>
    <span class="css-bookmark-action" style="padding-top: 4px; padding-right: 4px;">
      <%= link_to 'Edit', edit_topic_bookmark_path(props[:topic], props[:bookmark]),
                  class: 'btn btn-xs btn-success' %>
    </span>
  <% end %>
</div>
